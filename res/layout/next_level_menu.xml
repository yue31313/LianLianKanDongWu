<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@drawable/dialogbg2"
    >
    <LinearLayout
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@drawable/dialogbg"
    android:layout_margin="3sp"
    android:id="@+id/resumelayout"
    >
    <TextView
	  android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Level 1 Cleared"
      android:textSize="30sp"
      android:id="@+id/levelcleartv"
      android:textStyle="bold"
      android:layout_marginBottom="10sp"
	/>
    
    <TextView
	  android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Score : 888"
      android:textSize="25sp"
      android:id="@+id/levelscoretv"
      android:textStyle="bold"
      android:textColor="#11EE11"
      android:layout_marginBottom="15sp"
	/>
    
    <Button
	  android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Next Level"
      android:textSize="22sp"
      android:id="@+id/btnnext"
      android:textStyle="bold"
      android:layout_marginTop="10sp"
      android:background="@drawable/menu_button_select"
      android:textColor="#EEEEEE"
	/>

   </LinearLayout>
   
    </LinearLayout>

      
