<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@drawable/dialogbg2"
    >
    <LinearLayout
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@drawable/dialogbg"
    android:layout_margin="3sp"
    android:id="@+id/resumelayout"
    >
    <TextView
	  android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Try to match all the animals in the time limit."
      android:textSize="25sp"
      android:textStyle="bold"
      android:layout_marginBottom="20sp"
      android:id="@+id/levelinfotv1"
	/>
    
            <TextView
	  android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Every Match wins 1 seconds."
      android:textSize="25sp"
      android:textStyle="bold"
      android:layout_marginBottom="20sp"
      android:id="@+id/levelinfotv2"
	/>
      
            <LinearLayout
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    
    <Button
	  android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Next"
      android:textSize="25sp"
      android:id="@+id/btnyes"
      android:textStyle="bold"
      android:layout_marginTop="5sp"
      android:background="@drawable/menu_button_select"
      android:textColor="#EEEEEE"
	/>
    </LinearLayout>
   </LinearLayout>
   
    </LinearLayout>

      
