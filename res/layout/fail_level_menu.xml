<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@drawable/dialogbg2"
    >
    <LinearLayout
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@drawable/dialogbg"
    android:layout_margin="3sp"
    android:id="@+id/resumelayout"
    >
    <TextView
	  android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Level Failed"
      android:textSize="30sp"
      android:id="@+id/levelfailtv"
      android:textStyle="bold"
      android:layout_marginBottom="10sp"
	/>
    
    <TextView
	  android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="You are stopped by Level 2"
      android:textSize="25sp"
      android:id="@+id/levelinfotv"
      android:textStyle="bold"
      android:layout_marginBottom="10sp"
	/>
    
        <TextView
	  android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Scores of this round"
      android:textSize="25sp"
      android:id="@+id/levelscoretv1"
      android:textStyle="bold"
	/>
                <TextView
	  android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text=""
      android:textSize="25sp"
      android:id="@+id/levelscoretv2"
      android:textStyle="bold"
      android:layout_marginBottom="5sp"
      android:textColor="#11EE11"
	/>
        
            <TextView
	  android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Best scores of today"
      android:textSize="25sp"
      android:id="@+id/levelbestscoretv1"
      android:textStyle="bold"
	/>
            
            <TextView
	  android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text=""
      android:textSize="25sp"
      android:id="@+id/levelbestscoretv2"
      android:textStyle="bold"
      android:layout_marginBottom="10sp"
      android:textColor="#EE1111"
	/>
    <Button
	  android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Try Again"
      android:textSize="22sp"
      android:id="@+id/btnok"
      android:textStyle="bold"
      android:layout_marginTop="5sp"
      android:background="@drawable/menu_button_select"
      android:textColor="#EEEEEE"
	/>

   </LinearLayout>
   
    </LinearLayout>

      
